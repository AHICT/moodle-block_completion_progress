{{!
  @template block_completion_progress/overview_bulkactions

  Example context (json):
  {
    "messagingallowed": false,
    "notesallowed": false,
    "noteshelpicon": {
      "title": "Help with Context",
      "url": "http://example.org/help.php",
      "linktext": "",
      "icon":{
          "attributes": [
              {"name": "class", "value": ""},
              {"name": "src", "value": "../../../pix/help.svg"},
              {"name": "alt", "value": "Help icon"}
          ]
      }
    }
  }
}}
<div class="bulkactions m-1">
  <label>{{#str}}withselectedusers{{/str}}</label>
  {{#messagingallowed}}
  <button id="sendmessage" disabled class="btn btn-secondary">{{#str}}messageselectadd{{/str}}</button>
  {{/messagingallowed}}
  {{#notesallowed}}
  <button id="addnote" disabled class="btn btn-secondary">{{#str}}addnewnote, notes{{/str}}</button>
  {{/notesallowed}}
  <div class="d-none" data-region="state-help-icon">{{#noteshelpicon}}{{>core/help_icon}}{{/noteshelpicon}}</div>
</div>
